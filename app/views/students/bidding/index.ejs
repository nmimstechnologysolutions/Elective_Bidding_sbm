.wrap {
  width: 100%;
  height: 188px;
  position: absolute;
  top: -8px;
  left: 8px;
  overflow: hidden;
}

.wrap:before,
.wrap:after {
  content: "";
  position: absolute;
}

.wrap:before {
  width: 40px;
  height: 8px;
  right: 70px;
  /* background: #16A34A; */
  border-radius: 8px 8px 0px 0px;
}

.wrap:after {
  width: 8px;
  height: 40px;
  right: 0px;
  top: 70px;
  /* background: #16A34A; */
  border-radius: 0px 8px 8px 0px;
}


.wrap-winning:before,
.wrap-winning::after {
  background: #059669;
}

.wrap-losing:before,
.wrap-losing::after {
  background: #F43F5E;
}

.ribbon {
